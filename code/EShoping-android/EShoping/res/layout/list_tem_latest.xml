<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/latest_item_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/latest_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/latest_item_img"
        android:text="标题"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/latest_item_oldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/latest_item_img"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/latest_item_curPrice"
        android:text="TextView" />

    <TextView
        android:id="@+id/latest_item_curPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/latest_item_img"
        android:layout_alignLeft="@+id/latest_item_desp"
        android:text="TextView" />

    <TextView
        android:id="@+id/latest_item_desp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latest_item_title"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="TextView" />

</RelativeLayout>