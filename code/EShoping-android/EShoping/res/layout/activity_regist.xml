<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/com_head_back_title" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/themecolor" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_input" />

        <EditText
            android:id="@+id/reg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView2"
            android:layout_below="@+id/TextView04"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/TextView03"
            android:autoText="false"
            android:background="@null"
            android:capitalize="none"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:inputType="text|textPassword"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reg_pwd"
            android:layout_alignBottom="@+id/reg_pwd"
            android:layout_alignLeft="@+id/TextView04"
            android:gravity="start"
            android:text="密    码："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/reg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/TextView04"
            android:autoText="false"
            android:background="@null"
            android:capitalize="none"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reg_user"
            android:layout_alignBottom="@+id/reg_user"
            android:layout_alignLeft="@+id/ImageView02"
            android:layout_marginLeft="31dp"
            android:gravity="left"
            android:text="用户名："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_input" />

        <EditText
            android:id="@+id/reg_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView2"
            android:layout_below="@+id/txt_email"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/txt_code"
            android:autoText="false"
            android:background="@null"
            android:capitalize="none"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:hint="不使用验证码请留空"
            android:inputType="text|textPassword"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reg_code"
            android:layout_alignBottom="@+id/reg_code"
            android:layout_alignLeft="@+id/txt_email"
            android:gravity="start"
            android:text="验证码："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/txt_email"
            android:autoText="false"
            android:background="@null"
            android:capitalize="none"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reg_email"
            android:layout_alignBottom="@+id/reg_email"
            android:layout_alignLeft="@+id/ImageView01"
            android:layout_marginLeft="31dp"
            android:gravity="left"
            android:text="Email："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_checkerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/themecolor"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/login_button"
            android:onClick="submit"
            android:text="注  册"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>