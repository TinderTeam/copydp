<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_list_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/home_list_item_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/load_image_failed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/home_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/home_list_item_desp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/home_list_item_title"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="TextView"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/home_list_item_curPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="600￥"
                android:textColor="@color/themecolor" />

            <TextView
                android:id="@+id/home_list_item_oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="300Y" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>