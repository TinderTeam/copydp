<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/order_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tabbarback"
        android:gravity="top"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/com_head_back_title" />

        <TextView
            android:id="@+id/order_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_large"
            android:text="小肥羊"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/block"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_basic"
                android:layout_marginLeft="@dimen/pad_large"
                android:layout_marginRight="@dimen/pad_large"
                android:layout_marginTop="@dimen/pad_basic">

                <TextView
                    android:id="@+id/order_label_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单价"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/order_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="￥999"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/block"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_basic"
                android:layout_marginLeft="@dimen/pad_large"
                android:layout_marginRight="@dimen/pad_large"
                android:layout_marginTop="@dimen/pad_basic" >

                <TextView
                    android:id="@+id/order_lable_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="数量"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3" >

                    <FrameLayout
                        android:id="@+id/frameLayout1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/conner"
                        android:clickable="true"
                        android:onClick="plus" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="+"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <EditText
                        android:id="@+id/order_quantity"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.02"
                        android:background="@drawable/edittext_sel"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1" />

                    <FrameLayout
                        android:id="@+id/frameLayout2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/conner"
                        android:clickable="true"
                        android:onClick="minus" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="-"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/block"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_basic"
                android:layout_marginLeft="@dimen/pad_large"
                android:layout_marginRight="@dimen/pad_large"
                android:layout_marginTop="@dimen/pad_basic">

                 <TextView
                     android:id="@+id/order_label_sum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="总价"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="@color/black" />

                <TextView
                    android:id="@+id/order_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="￥999"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/themecolor" />

            </LinearLayout>

        </LinearLayout>
        <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/order_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/common_btn"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>
