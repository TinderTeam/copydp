<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/order_product_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/load_image_failed" />

        <TextView
            android:id="@+id/order_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/order_product_img"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/order_product_img"
            android:ellipsize="marquee"
            android:text="产品名称"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/order_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/order_activity_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="1份" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignRight="@+id/order_product_quantity"
            android:layout_toRightOf="@+id/textView3"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_activity_name"
            android:layout_toRightOf="@+id/order_product_img"
            android:text="订单号:" />

        <TextView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="过   期:" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_code"
            android:layout_toRightOf="@+id/order_product_img"
            android:text="已下单" />

        <TextView
            android:id="@+id/order_overdue_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_code"
            android:layout_alignBottom="@+id/txt_code"
            android:layout_alignLeft="@+id/order_id"
            android:text="TextView" />

        <Button
            android:id="@+id/order_delete_btn"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/order_status"
            android:layout_alignBottom="@+id/order_status"
            android:layout_alignRight="@+id/order_id"
            android:background="@drawable/common_btn"
            android:onClick="deleteCancelOrderEvent"
            android:text="删除订单"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>
