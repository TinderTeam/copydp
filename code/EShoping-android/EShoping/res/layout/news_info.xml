<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical" >
        
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/com_head_back" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/activity_horizontal_margin"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/news_info_title"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="新闻标题"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/black"
	            android:textColorHint="@color/black" />
	
	        <TextView
	            android:id="@+id/news_info_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="2014-12-10"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <TextView
            android:id="@+id/news_info_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="精神的咖啡花洒的咖啡坏死的回复撒谎的飞吧开氏温标封ID神佛水电费的横扫"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </FrameLayout>

    </LinearLayout>
</RelativeLayout>